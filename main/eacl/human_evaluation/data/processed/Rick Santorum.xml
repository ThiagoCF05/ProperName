	<TITLE>Rick Santorum</TITLE>
	<PARAGRAPH ID="1">
		<REFERENCE GIVENNESS="new" ID="1" SENTENCE-GIVENNESS="new" SYNCAT="np-subj">
			<REFEX FORM="+f+m+l" MODEL="random">Richard John Santorum</REFEX>
			<REFEX FORM="+f+m+l" MODEL="siddharthan">Richard John Santorum</REFEX>
